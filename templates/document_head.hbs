{{#if signed_in}}
<script>
    console.info("Signed in.");
    window.sessionStorage.removeItem("phone_reg");
</script>
{{else}}
<script>
    function getAccessToken() {
        var b = document.cookie.match('(^|;)\\s*' + "access_token" + '\\s*=\\s*([^;]+)');
        return b ? b.pop() : null;
    }
    var accessToken = getAccessToken();

    if (window.sessionStorage.getItem("last_access_token") !== accessToken) {
        window.sessionStorage.removeItem("sso_checked");
        window.sessionStorage.setItem("last_access_token", accessToken);
    }

    if (accessToken !== null && sessionStorage.getItem("sso_checked") === null) {
        console.info("NOT Signed in. - Querying ZENDESKSSO...");
        window.sessionStorage.setItem("sso_checked", true);
        window.location = "{{settings.country_site_url}}" + "account/zendesksso/?nativeMode=1"
    }
    else if (accessToken !== null && sessionStorage.getItem("sso_checked") !== null) {
        console.info("Phone registered account.");
        window.sessionStorage.setItem("phone_reg", true);
        window.sessionStorage.setItem("last_access_token", accessToken)
    }
    else if (accessToken === null) {
        console.info("Signed out.");
        window.sessionStorage.removeItem("sso_checked");
        window.sessionStorage.removeItem("phone_reg");
    }
</script>
{{/if}}
